<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_customer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="15dp"
    android:background="@color/dark_gray"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/img_avata"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/trainer2"

            app:civ_border="true"
            app:civ_border_color="@color/green"
            app:civ_border_width="2dp"
            app:civ_shadow="true"
            app:civ_shadow_color="@color/green"
            app:civ_shadow_radius="10dp" />

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thái Đức Lợi"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/btnDatLich"
            android:layout_width="80dp"
            android:layout_height="22dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/custom_input_2"
            android:gravity="center"
            android:text="Bài Nộp"
            android:textColor="@color/green"
            android:textSize="15dp"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>